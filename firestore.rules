service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{post} {
    	allow read;
      allow create: if request.auth.uid != null && resource.data.hiddenAuthorId == request.auth.uid;
      allow update, delete: if resource.data.hiddenAuthorId == request.auth.uid
    }
    match /profiles/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /topics/{document=**} {
    	allow read;
      allow write: if request.auth.uid != null;
    }
    match /comments/{document=**} {
    	allow read;
      allow write: if request.auth.uid != null;
    }
  }
}
